<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder_add_acc"
    android:layout_margin="5dp">

    <LinearLayout

        android:id="@+id/ln_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_adjust_black_24dp" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:text="Gmail"
            android:textColor="#030303"
            android:textSize="25sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/imv_remove"
        android:src="@drawable/ic_edit_black_24dp" />

    <ImageView
        android:id="@+id/imv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/ln_item"
        android:src="@drawable/ic_delete_sweep_black_24dp" />


</RelativeLayout>